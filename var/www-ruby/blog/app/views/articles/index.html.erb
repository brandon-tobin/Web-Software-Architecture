<div class="page-header">
	<h1 class="text-center">Listing articles</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th colspan="3"></th>
	</tr>

	<% @articles.each do |article| %>
	
	<tr>
		<td><%= article.title %></td>
		<td><%= article.text %></td>
		<td><%= link_to 'Show', article_path(article), :class=> 'btn btn-s btn-success' %></td>
		<td><%= link_to 'Edit', edit_article_path(article), :class=> 'btn btn-s btn-warning' %></td>
		<td><%= link_to 'Destroy', article_path(article), method: :delete, :class=> 'btn btn-s btn-danger', data: { confirm: 'Are you sure?' } %></td>
	</tr>
	<% end %>
  </table>
</div>

<%= link_to 'New article', new_article_path, :class=> 'btn btn-s btn-primary' %>

