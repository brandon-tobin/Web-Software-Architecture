<div class = "container">
	<div class = "page-header">
		<h1 class = "text-center">Show Article</h1>
	</div>
</div>

<div class = "container">
<div class = "col-md-8">
<p>
	<h4>
	<strong>Title:</strong>
	<%= @article.title %>
	</h4>
</p>

<p>
	<strong>Text:</strong>
	<%= @article.text %>
</p>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_article_path(@article), :class=> 'btn btn-s btn-warning' %>
<%= link_to 'Back', articles_path, :class=> 'btn btn-s btn-danger' %>

</div>
</div>
